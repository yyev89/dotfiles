# list aliases
alias ls="exa"
alias l="exa -1"
alias lt="exa -T"
alias ll="exa -l"
alias llt="exa -lT"
alias la="exa -lah"

# python short
alias py="python3"

# console clipboard
alias pbcopy='xsel --input --clipboard'
alias pbpaste='xsel --output --clipboard'

# diff color output
alias diff="diff --color=always"
